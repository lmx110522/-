.title{
  display: flex;
  justify-content: center;
  padding: 15rpx;
}
.section{
  margin: 15rpx;
}
.section textarea{
  min-height: 180rpx;
  border: 1px solid #f1f1ff;
  width: 98%;
  border-radius: 15rpx;
}
.section #submit{
  margin-top: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #B22222;
  color: white;
  font-size: 16px;
}
.other_msg{
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  font-size: 16px;
}
.base_msg{
  margin-top: 20rpx;
  color: #B22222;
  font-weight: bold;
}