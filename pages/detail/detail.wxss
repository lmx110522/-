
@import"../../wxParse/wxParse.wxss";

.detail_title {
   display: flex;
   justify-content: center;
   margin: 20rpx;
}
.detail_msg{
   display: flex;
  flex-direction: row;
  justify-content: center;
}
.detail_msg view{
  font-size: 12px;
  color: #666;
  margin-right: 25rpx;
}
.author{
   display: flex;
   justify-content: center;
   color: #B22222;
   font-weight: bold;
}
.author text{
  display: block;
  margin-top: 10rpx;
  margin-left: 10rpx;

}
.detail_msg icon{
  margin-right: 10rpx;
}
.detail_content{
  background: #f1f1f1;
  border-radius: 10rpx;
  width: 98%;
  margin: 10rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.thumb{
  margin-top: 15rpx;
  font-size: 15px;
  /* color: #B22222; */
  margin: 0  0  0 38%;
  color: #666;
  font-weight: bold;
}
.thumb icon{
  font-size: 18px;
  margin-bottom: 10rpx;
  margin-right: 7rpx;
}
.comment_title{
  margin: 0rpx 20rpx;
  font-size: 20px;
}
.section{
  margin: 15rpx;
}
.section textarea{
  min-height: 120rpx;
  border: 1px solid #f1f1ff;
  width: 98%;
  border-radius: 15rpx;
}
.section #submit{
  margin-top: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #B22222;
  color: white;
  font-size: 16px;
}
.comment_item{
  border: 1px solid #f1f1f1;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 4rpx;

  margin: 20rpx 10rpx;
  display: flex;
  flex-direction: row;
}
.comment_item image{
  height: 100rpx;
  width: 100rpx;
  margin-bottom: 10rpx;
}
.comment_desc{
  position: relative;
  width: 75%;
}
.comment_item .comment_content{
  color: #B22222;
  font-size: 14px;
}
.comment_other{
  margin-top: 20rpx;
}
.comment_other text{
   font-size: 13px;
   margin: 0rpx 20rpx 0rpx 10rpx;
}
.comment_content{
  width: 60%;
}
.comment_other icon{
  color: #666;
  font-size: 16px;
  margin-left: 18rpx;
}
.top_msg{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  width: 140rpx;
  color: gray;
}
.icon_do{
  float: right;
}
.source  .source_content{
  background: #f1f1f1;
  color: #666;
  font-size: 12px;
}
.source{
  background: #f1f1f1;
  padding: 10rpx;
  margin-top: 15rpx;
}
.h2{
  color: #B22222;
  font-size: 14px;
}
.user{
  width: 140rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
